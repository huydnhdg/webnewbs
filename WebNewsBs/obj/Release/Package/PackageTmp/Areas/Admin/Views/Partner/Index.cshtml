@model IEnumerable<WebNewsBs.Models.Partner>
@{
    ViewBag.Title = "Danh sách đối tác";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Danh sách các đối tác</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Tên đối tác</th>
                    <th>Tiêu đề</th>
                    <th>Ảnh đại diện</th>
                    <th>Mô tả</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.partner_name</td>
                        <td>@item.title</td>
                        <td>
                            <img width="100" src="@item.thumbnail" /> 
                        </td>
                        <td>
                            <a class="btn" href="/admin/partner/edit/@item.partner_id"><i class="fa fa-edit fa-fw"></i></a>
                            <a class="btn" href="/admin/partner/delete/@item.partner_id"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </div>
    <!-- /.card-body -->
</div>

